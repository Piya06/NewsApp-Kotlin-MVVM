<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.basic.newsapp.ui.screens.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.basic.newsapp.ui.screens.NewsDetailFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_detail_news">

        <argument
            android:name="article"
            app:argType="com.basic.newsapp.models.Article" />

    </fragment>
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.basic.newsapp.ui.screens.SearchNewsFragment"
        android:label="fragment_search_news"
        tools:layout="@layout/fragment_search_news" />
</navigation>